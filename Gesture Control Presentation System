import cv2
import mediapipe as mp
import pyautogui

mp_hands = mp.solutions.hands
mp_draw = mp.solutions.drawing_utils

# Track finger states
def count_fingers(hand_landmarks):
    finger_tips = [4, 8, 12, 16, 20]
    fingers = []

    # Thumb
    if hand_landmarks.landmark[finger_tips[0]].x < hand_landmarks.landmark[finger_tips[0] - 1].x:
        fingers.append(1)
    else:
        fingers.append(0)

    # Other fingers
    for tip in finger_tips[1:]:
        if hand_landmarks.landmark[tip].y < hand_landmarks.landmark[tip - 2].y:
            fingers.append(1)
        else:
            fingers.append(0)

    return fingers  # List like [0,1,1,0,0]


cap = cv2.VideoCapture(0)

with mp_hands.Hands(max_num_hands=1, min_detection_confidence=0.7) as hands:
    while True:
        success, img = cap.read()
        if not success:
            break

        imgRGB = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
        results = hands.process(imgRGB)

        if results.multi_hand_landmarks:
            for hand_landmarks in results.multi_hand_landmarks:
                mp_draw.draw_landmarks(img, hand_landmarks, mp_hands.HAND_CONNECTIONS)

                fingers = count_fingers(hand_landmarks)
                total = fingers.count(1)

                # Gestures and actions
                if total == 1 and fingers[1] == 1:  
                    print("Next Slide")
                    pyautogui.press("right")
                    cv2.waitKey(500)

                elif total == 2 and fingers[1] == 1 and fingers[2] == 1:
                    print("Previous Slide")
                    pyautogui.press("left")
                    cv2.waitKey(500)

                elif total == 5:  
                    print("Start Slideshow (F5)")
                    pyautogui.press("f5")
                    cv2.waitKey(700)

                elif total == 0:
                    print("Exit Slideshow (Esc)")
                    pyautogui.press("esc")
                    cv2.waitKey(700)

        cv2.imshow("Gesture Controlled Presentation", img)

        if cv2.waitKey(1) & 0xFF == ord('q'):
            break

cap.release()
cv2.destroyAllWindows()
